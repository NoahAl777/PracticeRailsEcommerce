<h1>Login</h1>

<p>
<% if flash[:message] %>
<%= flash[:message] %>
<% end %>
</p>

<%= form_tag('/login') do %>
  <%= label_tag "username", "Username:" %>
  <%= text_field_tag "username" %>
  <br><br>
  <%= label_tag "password", "Password:" %>
  <%= password_field_tag "password" %>
  <br><br>
  <%= submit_tag "Login" %>
<% end %>