<h1>Welcome <%= @user.username %></h1>

<h2> Your Listings </h2>
<% @user.posts.each do |p| %>
  <h4><li>$<%=p.price %> <%= link_to p.title, post_path(p) %></li></h4>
<% end %>

<h2> Your Purchases </h2>
<% @post.each do |b| %>
  <% if b.buyer_user_id == current_user.id %>
    <%= link_to b.title, post_path(b) %>
  <% end %>
<% end %>

